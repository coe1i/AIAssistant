@{
    ViewData["Title"] = "Merch";
}
<h1>@ViewData["Merch"]</h1>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/site.css">

    <link rel="icon" href="./defi.png" type="image/png" sizes="16x16">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        .card {
            width: 18rem;
            margin-bottom: 1rem;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f0e5fa;
        }

        h1{
            color: #4b0082;
        }


        .btn-primary {
            background-color: #4b0082;
            border: 1px solid #4b0082;
            transition: all 0.3s ease;
            transform: scale(1);
            box-shadow: 0 0 0 rgba(75, 0, 130, 0);
            position: relative;
            overflow: hidden;
        }

            .btn-primary:before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(255, 255, 255, 0.1);
                opacity: 0;
                transform: translateX(-100%) translateY(-100%) rotate(45deg);
                transition: all 0.3s ease;
            }

            .btn-primary:hover {
                background-color: #6a2cb2;
                border: 1px solid #6a2cb2;
                transform: scale(1.05);
                box-shadow: 0 0 10px rgba(75, 0, 130, 0.5);
            }

                .btn-primary:hover:before {
                    opacity: 1;
                    transform: translateX(100%) translateY(100%) rotate(45deg);
                }

            .btn-primary:active {
                background-color: #9c4dcc;
                border: 1px solid #9c4dcc;
                box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.3);
                transform: scale(0.98);
            }

    </style>
</head>
<body>
    <div class="d-flex align-items-center">
        <h1 class="mb-0 mr-2">Merch de robotin</h1>
        <img src="@Url.Content("~/sintexto.png")" alt="Robotin" class="robotin-imageask" />
    </div>
    <div class="container mt-5">

        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <img src="@Url.Content("~/GORRO.png")" alt="Robotin" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">Gorro pescador</h5>
                        <p class="card-text">$21.00</p>
                        <a href="https://www.redbubble.com/es/i/gorro-de-pescador/AI-Assistant-de-AIAssistant/146134752.51XZU" class="btn btn-primary" target="_blank">Comprar</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="@Url.Content("~/camiseton.png")" alt="Robotin" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">Camiseta Unisex</h5>
                        <p class="card-text">$26.00</p>
                        <a href="https://www.redbubble.com/es/i/camiseta/AI-Assistant-de-AIAssistant/146134752.WFLAH" class="btn btn-primary" target="_blank">Comprar</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="@Url.Content("~/tote.png")" alt="Robotin" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">Tote bag tela</h5>
                        <p class="card-text">$19.00</p>
                        <a href="https://www.redbubble.com/es/i/bolsa-de-tela/AI-Assistant-de-AIAssistant/146134752.PJQVX" class="btn btn-primary" target="_blank">Comprar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>

